@page
@model Lab_4.Pages.Comment.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 mb-4">Edit</h1>

<h4 class="mb-4">Comment</h4>

<hr class="my-4" />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.Id" />

            <input asp-for="Comment.Id" class="form-control" hidden="hidden" />
            <input asp-for="Comment.SessionId" class="form-control" hidden="hidden" />
            <input asp-for="Comment.Stamp" class="form-control" hidden="hidden" />
            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <input asp-for="Comment.Text" class="form-control" />
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
